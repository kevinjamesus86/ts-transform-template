{
  "files": ["src/index.ts"],
  "exclude": ["**/node_modules", "**/build"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "strictNullChecks": true,
    "strict": true
  }
}
