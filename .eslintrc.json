{
  "root": true,
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "reportUnusedDisableDirectives": true,
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "script",
    "ecmaFeatures": {
      "modules": false,
      "impliedStrict": true
    }
  },
  "rules": {
    "prettier/prettier": 2,
    "semi": [2, "always"],
    "new-parens": 2,
    "complexity": 1
  },
  "env": {
    "node": true
  }
}
