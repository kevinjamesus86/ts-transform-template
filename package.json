{
  "name": "ts-transform-template",
  "version": "1.0.0",
  "description": "Transform hook for inlined <html/> template expressions. Smoosh all the things.",
  "main": "index.js",
  "author": "kevin@modeanalytics.com",
  "license": "Unlicense",
  "private": true,
  "scripts": {
    "build": "rimraf build/; yarn lint && yarn test && tsc",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "jest",
    "test:watch": "jest -w"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "25.5.4",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "25.5.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "eslint --fix",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "jest --coverage --findRelatedTests",
      "git add"
    ]
  }
}
