{
  "name": "ts-transform-template",
  "version": "1.1.0",
  "description": "Transform hook for inlined <html/> template expressions. Smoosh all the things.",
  "license": "Unlicense",
  "author": "kevin@modeanalytics.com",
  "main": "build/index.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "yarn clean; yarn lint && yarn test && tsc -p . && prettier build --write",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest -w",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.4",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "*.{js}": [
      "yarn lint:fix"
    ],
    "*.{ts}": [
      "yarn lint:fix",
      "yarn test"
    ]
  }
}
