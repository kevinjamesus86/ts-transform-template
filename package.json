{
  "name": "ts-transform-template",
  "version": "1.0.1",
  "description": "Transform hook for inlined <html/> template expressions. Smoosh all the things.",
  "license": "Unlicense",
  "author": "kevin@modeanalytics.com",
  "main": "build/index.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "yarn clean; yarn lint && yarn test && tsc -p . && prettier build --write",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest -w"
  },
  "devDependencies": {
    "@types/jest": "26.0.15",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.1",
    "prettier": "2.2.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "yarn lint:fix"
    ],
    "*.{ts}": [
      "yarn lint:fix",
      "yarn test"
    ]
  }
}
